#include<iostream>
using namespace std;
class TV{
    private:
    bool is On;
    public:
    void control(bool x){
        is On=x;
    }
    void getstatus(){
        if(isOn)cout<<"TV is On";
    }
        else{ cout<<"TV is Off";
    }

class Remote{
    public:
    void controlTV(TV&a,boolx)
    a.control(x);
}
}
int main(){
    TV t1;
    Remote r1;
    r1.controlTV(t1,true);
    t1.getstatus();
};




//MESSAGE PASSING
//c++ implements message passing by enebling us to control one objrct from another by passing messsages or values.


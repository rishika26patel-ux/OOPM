// VECTOR= vector is a generic flexible nad dynamicly allocated sequential data strurture implement witj the help of arrays .it works nearly same as an array but has several functionalities to make it easy to use 
// since a vector is a dynamicaly allocated data structure whenever we try to grow it by adding more elements it reallocates another bigger factor,copies all the elements from the old vector to this new biggere vector 

#include <iostream>
#include <vector>
#include <algorithm>
using namespace std;

int main(){
    //declation and initiliazation
    vector <int> a ={1,2,3,4,5};  // <int> vector intizer ko hold karega
    a.reserve(100);
    cout<<a.size()<< " " <<a.capacity()<<end l;
   // a.push_back(6);
     // cout<<a.size()<< " "<<a.capacity()<<end l;
}


// every sequential STL can be iterated using an iterated class .this class gives us pointers to various location in a vector and with the help of these pointer we can acces and modifie the vector


//begins function gives you the pointer before the last element
//and function gives you the pointer after the last element


vector<int>[]iterator itr;
itr= a.begin();
cout<< *itr << endl;
itr= a.end().1;
cout<<*itr<<endl;
for(itr=a.begin();itr !=a.end();itr++){
    cout<< *itr << " ";
}
cout<<endl;
//MODIFIED A VECTOR
a(0)=10;
for(auto i:a)
{
    i=i*2;
}
for(auto j:a){
    cout<<j<<"";
}